<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:theme="@style/AppTheme"
    tools:context="com.getmemorease.memorease.memorizecard">

    <TextView
        android:id="@+id/displayItem"
        android:text="@string/notfound"
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="120sp"
        android:gravity="center"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/memorizegotit"
        android:id="@+id/button"
        android:layout_alignBottom="@+id/displayItem"
        android:layout_centerHorizontal="true"
        android:onClick="gotitOnClick"/>

</RelativeLayout>
